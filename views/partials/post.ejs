      <form class="blogForm" action="/add-post" method="POST">
        <div class="form-group">
            <label for="title">Post Title</label>
            <input type="text" id="title" name="title" class="form-control" placeholder="Enter title" value="fallback text" required>
        </div>
        <div class="form-group">
            <label for="content">Content</label>
            <textarea id="content" name="content" class="form-control" placeholder="Write your post here" rows="4" value="fallback text" required>fallback text</textarea>
        </div>
        <button type="submit" class="btn btn-primary mt-2">Add Post</button>
    </form>

    <!-- Blog Posts Display Section -->
    <div class="blog-posts mt-4">
        <% blogPosts.forEach(post => { %>
            <div class="blog-post">
                <h2 class="blog-post-title"><%= post.title %></h2>
                <p class="blog-post-meta">Posted by <a href="#">Author</a></p>
                <p><%= post.content %></p>
                <hr>
            </div>
        <% }) %>
    </div>
</div>

<div class="blog-posts mt-4">
    <% blogPosts.forEach((post, index) => { %>
        <div class="blog-post">
            <h2 class="blog-post-title"><%= post.title %></h2>
            <p><%= post.content %></p>

            <!-- Edit and Delete Buttons -->
             <!-- Edit Button -->
            <a href="/pages/edit/<%= index %>" class="btn btn-secondary">Edit</a> 
            <form action="/delete-post" method="POST" style="display: inline;">
                <!-- display index for debug -->
                <p>Index: <%= index %></p> 
                <!-- Delete Button -->
                <input type="hidden" name="index" value="<%= index %>">
                <button type="submit" class="btn btn-danger">Remove</button>
            </form>
            
            <hr>
        </div>
    <% }) %>
</div>